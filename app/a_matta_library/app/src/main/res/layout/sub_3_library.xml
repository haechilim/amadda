<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    // 바탕색깔

    // 식기 아이콘

    // 아맞다급식 타이틀

    //소개글 줄 1

    // 소개글 줄 2

    // 안내사항

    <ImageView
        android:id="@+id/logo_library"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_library" />

    <TextView
        android:id="@+id/title_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nixgon_b"
        android:text="아맞다도서관"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_library" />

    <TextView
        android:id="@+id/des1_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nixgon_m"
        android:text="앗! 또 도서관 티켓팅 깜빡했나요?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_library" />

    <TextView
        android:id="@+id/des2_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/nixgon_m"
        android:text="신청 10분 전 알림을 보내드릴게요!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/des1_library" />

    <ImageView
        android:id="@+id/arrow_library"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/des2_library"
        app:srcCompat="@drawable/downdoublearrow"
        tools:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/que_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/prtd_smb"
        android:text="언제 알림을 받고 싶나요?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/button_library"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/arrow_library" />

    <TextView
        android:id="@+id/weekdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/prtd_m"
        android:text="주중 |"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/monday"
        app:layout_constraintEnd_toStartOf="@id/monday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/monday" />

    <CheckBox
        android:id="@+id/monday"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/prtd_m"
        android:text="월"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/tuesday"
        app:layout_constraintStart_toEndOf="@id/weekdays"
        app:layout_constraintTop_toBottomOf="@+id/que_library" />

    <CheckBox
        android:id="@+id/tuesday"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/prtd_m"
        android:text="화"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/wednesday"
        app:layout_constraintStart_toEndOf="@id/monday"
        app:layout_constraintTop_toBottomOf="@+id/que_library" />

    <CheckBox
        android:id="@+id/wednesday"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/prtd_m"
        android:text="수"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/thursday"
        app:layout_constraintStart_toEndOf="@id/tuesday"
        app:layout_constraintTop_toBottomOf="@+id/que_library" />

    <CheckBox
        android:id="@+id/thursday"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/prtd_m"
        android:text="목"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/friday"
        app:layout_constraintStart_toEndOf="@id/wednesday"
        app:layout_constraintTop_toBottomOf="@+id/que_library" />

    <CheckBox
        android:id="@+id/friday"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/prtd_m"
        android:text="금"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/thursday"
        app:layout_constraintTop_toBottomOf="@+id/que_library" />

    <TextView
        android:id="@+id/weekends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/prtd_m"
        android:text="주말 |"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/saturday"
        app:layout_constraintEnd_toEndOf="@+id/weekdays"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@id/weekdays"
        app:layout_constraintTop_toTopOf="@id/saturday" />

    <CheckBox
        android:id="@+id/saturday"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:fontFamily="@font/prtd_m"
        android:text="토"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/monday"
        app:layout_constraintStart_toStartOf="@+id/monday"
        app:layout_constraintTop_toBottomOf="@id/monday" />

    <CheckBox
        android:id="@+id/sunday"
        android:layout_width="52dp"
        android:layout_height="35dp"
        android:fontFamily="@font/prtd_m"
        android:text="일"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/tuesday"
        app:layout_constraintStart_toStartOf="@+id/tuesday"
        app:layout_constraintTop_toBottomOf="@id/tuesday" />

    <Button
        android:id="@+id/button_library"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/prtd_smb"
        android:text="설정 저장"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/goback_from_library"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="#00ff0000"
        android:drawableTop="@drawable/gobacktomain_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>