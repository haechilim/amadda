<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    // 바탕색깔

    // 식기 아이콘

    // 아맞다급식 타이틀

    //소개글 줄 1

    // 소개글 줄 2

    <ImageView
        android:id="@+id/logo_kyokyo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button_kyokyo" />

    <TextView
        android:id="@+id/title_kyokyo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nixgon_b"
        android:text="아맞다교교"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_kyokyo" />

    <TextView
        android:id="@+id/des1_kyokyo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nixgon_m"
        android:text="자주 사용하는 교과교실을 설정해서"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_kyokyo" />

    <TextView
        android:id="@+id/des2_kyokyo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/nixgon_m"
        android:text="간편하게 교교신청하세요!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/des1_kyokyo" />

    <ImageView
        android:id="@+id/arrow_kyokyo"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/des2_kyokyo"
        app:srcCompat="@drawable/downdoublearrow"
        tools:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/que_kyokyo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/prtd_smb"
        android:text="신청할 타임을 모두 선택해주세요!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintBottom_toTopOf="@+id/button_kyokyo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrow_kyokyo" />

    <TextView
        android:id="@+id/weekdays_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/prtd_m"
        android:text="주중 | "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/zero_w"
        app:layout_constraintEnd_toEndOf="@id/weekdays_k2"
        app:layout_constraintStart_toStartOf="@id/weekdays_k2"
        app:layout_constraintTop_toTopOf="@id/zero_w" />

    <CheckBox
        android:id="@+id/zero_w"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/prtd_m"
        android:text="0타임"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/one_e"
        app:layout_constraintEnd_toEndOf="@id/one_e"
        app:layout_constraintStart_toStartOf="@id/one_e"
        app:layout_constraintTop_toBottomOf="@id/que_kyokyo" />

    <CheckBox
        android:id="@+id/one_w"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:fontFamily="@font/prtd_m"
        android:text="1타임"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/zero_w"
        app:layout_constraintEnd_toEndOf="@id/two_e"
        app:layout_constraintStart_toStartOf="@id/two_e"
        app:layout_constraintTop_toTopOf="@id/zero_w" />

    <CheckBox
        android:id="@+id/two_w"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:fontFamily="@font/prtd_m"
        android:text="2타임"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/zero_w"
        app:layout_constraintEnd_toEndOf="@id/three_e"
        app:layout_constraintStart_toStartOf="@id/three_e"
        app:layout_constraintTop_toTopOf="@id/zero_w" />

    <TextView
        android:id="@+id/weekdays_k2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/prtd_m"
        android:text="주말 | "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/one_e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/one_e"
        app:layout_constraintVertical_bias="0.538" />

    <CheckBox
        android:id="@+id/one_e"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:fontFamily="@font/prtd_m"
        android:text="1타임"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/two_e"
        app:layout_constraintStart_toEndOf="@id/weekdays_k2"
        app:layout_constraintTop_toBottomOf="@id/zero_w" />

    <CheckBox
        android:id="@+id/two_e"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:fontFamily="@font/prtd_m"
        android:text="2타임"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/one_e"
        app:layout_constraintEnd_toStartOf="@+id/three_e"
        app:layout_constraintStart_toEndOf="@+id/one_e"
        app:layout_constraintTop_toTopOf="@id/one_e" />

    <CheckBox
        android:id="@+id/three_e"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:fontFamily="@font/prtd_m"
        android:text="3타임"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/one_e"
        app:layout_constraintEnd_toStartOf="@+id/four_e"
        app:layout_constraintStart_toEndOf="@+id/two_e"
        app:layout_constraintTop_toTopOf="@id/one_e" />

    <CheckBox
        android:id="@+id/four_e"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/prtd_m"
        android:text="4타임"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/one_e"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/three_e"
        app:layout_constraintTop_toTopOf="@id/one_e" />

    <Button
        android:id="@+id/button_kyokyo"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/prtd_smb"
        android:text="신청하기"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/modify_settings"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/prtd_smb"
        android:text="설정 변경"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/goback_from_kyokyo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="#00ff0000"
        android:drawableTop="@drawable/gobacktomain_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>